<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/mpt_bg_circle_corner_solid_white_10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="246dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="46dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/mpt_sp_14"
                android:text="预约时间: "/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_time_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/mpt_sp_14"
                android:text="2017-08-16 "/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/gray"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:textSize="@dimen/mpt_sp_14"
                android:text="【宠物类型】"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_type_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/mpt_sp_14"
                android:textColor="@color/black"
                android:text="狗 "/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:textSize="@dimen/mpt_sp_14"
                android:text="【运输类型】"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_trans_type_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/mpt_sp_14"
                android:textColor="@color/black"
                android:text=" 专车 "/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:textSize="@dimen/mpt_sp_14"
                android:text="【寄件人】 "/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_user_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/mpt_sp_14"
                android:textColor="@color/black"
                android:text="寄件人，收件人 "/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:textSize="@dimen/mpt_sp_14"
                android:text="【联系方式】"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/mpt_sp_14"
                android:maxLength="11"
                android:textColor="@color/black"
                android:text="15912345678 "/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1" android:paddingStart="0dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/gray_70"
                android:textSize="@dimen/mpt_sp_14"
                android:text="【地址】"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_address_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textSize="@dimen/mpt_sp_14"
                android:text=".... "/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/gray"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="46dp" android:paddingStart="10dp" android:paddingEnd="10dp"
                  android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/mpt_sp_14"
                android:text="下单时间: "/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_order_titme_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="@dimen/mpt_sp_14"
                android:text="2017-08-16 "/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_in_order_tv"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="@dimen/mpt_sp_14"
                android:layout_marginRight="10dp"
                android:background="@drawable/mpt_bg_circle_corner_solid_primary_20dp"
                android:textColor="@color/white"
                android:text="确认接单 "/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_collect_out_order_tv"
                android:layout_width="98dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="@dimen/mpt_sp_14"
                android:background="@drawable/mpt_bg_circle_corner_stroke_primary_20dp"
                android:textColor="@color/mpt_colorPrimaryDark"
                android:text="确认送达 "/>
    </LinearLayout>

</LinearLayout>